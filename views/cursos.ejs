              <h3><%= curso.titulo %></h3>
              <p><%= curso.descripcion %></p>
              <a href="/curso/<%= curso.id %>" class="btn">Comprar</a>
            </div>
          <% }) %>
        </div>
      </div>
    <% }) %>
  </section>

